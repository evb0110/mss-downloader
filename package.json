{
  "name": "manuscript-downloader",
  "version": "1.0.6",
  "description": "Manuscript downloader for digital libraries (Gallica, e-codices, Vatican Library)",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:renderer && concurrently --names \"MAIN,RENDERER\" --prefix-colors \"yellow,cyan\" \"npm run dev:main\" \"npm run dev:renderer:watch\"",
    "dev:main": "npm run build:preload && tsc --project tsconfig.main.json && NODE_ENV=development electron dist/main/main.js",
    "dev:renderer": "npm run build:workers && mkdir -p dist/workers && cp workers-dist/pdf-worker.js dist/workers/",
    "dev:renderer:watch": "vite",
    "build": "npm run build:preload && npm run build:main && npm run build:renderer && npm run build:workers",
    "build:main": "npx tsc --project tsconfig.main.json",
    "build:preload": "npx tsc --project tsconfig.preload.json",
    "build:renderer": "vite build",
    "build:workers": "vite build --config vite.worker.config.ts",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint . --ext .vue,.js,.ts",
    "lint:fix": "eslint . --ext .vue,.js,.ts --fix",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "jspdf": "^3.0.1",
    "lodash": "^4.17.21",
    "marked": "^15.0.11",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.34.2",
    "vue": "^3.4.38",
    "vue-i18n": "^11.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-vue": "^5.1.3",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.28.0",
    "eslint-plugin-vue": "^10.1.0",
    "sass": "^1.84.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.1.4"
  },
  "build": {
    "appId": "com.me.manuscript-downloader",
    "productName": "Manuscript Downloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "icon": "assets/icon-512.png",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon-512.png",
      "identity": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "electron",
    "vue",
    "typescript",
    "manuscript",
    "downloader",
    "gallica",
    "bnf"
  ],
  "author": "unknown manuscript lover",
  "license": "MIT",
  "optionalDependencies": {
    "@img/sharp-win32-arm64": "^0.34.2",
    "@img/sharp-win32-x64": "^0.34.2"
  }
}
