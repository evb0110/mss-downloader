{
  "name": "mss-downloader-telegram-bot",
  "version": "2.0.2",
  "description": "Telegram bot for MSS Downloader build notifications (TypeScript/ES Modules)",
  "type": "module",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/bot.js",
    "start:bun": "bun run src/bot.ts",
    "start-multiplatform": "bun run src/start-multiplatform-bot.ts",
    "send-build": "npm run build && node dist/send-build.js",
    "send-build:bun": "bun run src/send-build.ts",
    "send-multiplatform-build": "npm run build && node dist/send-multiplatform-build.js",
    "send-multiplatform-build:bun": "bun run src/send-multiplatform-build.ts",
    "debug:bun": "bun run src/debug-bot-issue.ts",
    "fix:bun": "bun run src/fix-bot-issues.ts",
    "test-subscribe:bun": "bun run src/test-subscribe-response.ts",
    "verify-formatting:bun": "bun run src/verify-formatting.ts",
    "dev": "tsc --watch & nodemon --exec \"node dist/bot.js\" --watch dist",
    "dev:bun": "bun --watch src/bot.ts",
    "test": "npm run build && node --test dist/**/*.test.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.9",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "notifications",
    "builds",
    "typescript",
    "es-modules"
  ],
  "author": "E. Barsky",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "node-telegram-bot-api": "^0.64.0"
  }
}
